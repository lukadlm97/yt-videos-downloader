  </PropertyGroup>

  <ItemGroup>
    <None Remove="assets\icons\yt-icon.png" />
    <None Remove="assets\main-window\search.png" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="assets\icons\yt-icon.png">
