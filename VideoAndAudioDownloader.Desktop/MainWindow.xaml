<Window x:Class="VideoAndAudioDownloader.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VideoAndAudioDownloader.Desktop"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ListView Name="Persons" ItemsSource="{Binding PersonsViewModel}">
            <ListView.View>
                <GridView x:Name="grdPerson">
                    <GridViewColumn Header="Name"
                                    DisplayMemberBinding="{Binding Name}" Width="40">
                    </GridViewColumn>
                    <GridViewColumn Header="Age"
                                    DisplayMemberBinding="{Binding Age}" Width="40">
                    </GridViewColumn>
                </GridView>
            </ListView.View>

        </ListView>
    </Grid>
</Window>
